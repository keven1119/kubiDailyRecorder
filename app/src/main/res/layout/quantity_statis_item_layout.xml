<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:paddingTop="10dp"
    android:id="@+id/relativelayout_item_container"
    android:paddingBottom="10dp">

    <TextView
        android:id="@+id/textview_number"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        />


   <TextView
       android:id="@+id/textview_amount_input"
       android:layout_width="wrap_content"
       android:minWidth="60dp"
       android:layout_height="match_parent"
       android:gravity="center"
       android:layout_alignParentRight="true"
       android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/textview_delete_food"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="30dp"
        android:layout_toLeftOf="@id/textview_amount_input"
        android:gravity="center"
        android:text="@string/food_delete" />



    <RelativeLayout
        android:id="@+id/relativelayout_name_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/textview_number"
        android:layout_toLeftOf="@id/textview_delete_food"
        >

        <TextView
            android:id="@+id/textview_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:textStyle="bold"
            />


        <TextView
            android:id="@+id/textview_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:textSize="12dp"
            />

        <TextView
            android:id="@+id/textview_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/textview_type"
            android:textSize="12dp"/>

        <TextView
            android:id="@+id/textview_week_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@id/textview_price"
            android:layout_marginLeft="10dp"
            android:textSize="12dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorAccent"/>

</RelativeLayout>